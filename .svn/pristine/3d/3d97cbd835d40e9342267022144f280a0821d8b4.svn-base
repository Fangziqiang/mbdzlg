 *
 */
public class JsonQbqwzsbAction extends HttpServlet {
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private static Logger logger = Logger.getLogger(JsonQbqwzsbAction.class);
	private DzlgManager dzlgManager = (DzlgManager) SpringBeanFactory.getBean("dzlgManager");
	public void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		DzlgReqBean dzlgReqBean = null;
		// 读取请求内容
		response.setCharacterEncoding("utf-8");
		PrintWriter out = response.getWriter();
		String str = null;
		String jmxx = null;
		/**
		 * 1、获取请求数据
		 */
		String param = request.getParameter("param");
		logger.info(MBDZLGConstant.LOGINFO_TITLE_SUCCESS+"【位置上报】请求数据——>"+param);
		if(param == null || "".equals(param)){
			logger.info(MBDZLGConstant.LOGINFO_TITLE_FAILE+"【位置上报】参数为空");
			dzlgReqBean.setError(MBDZLGConstant.ERROR_REQ);
		}else{
			try {
				//1.1 、解密
				jmxx = DzlgParseHelper.decode_http(param);
				logger.info(MBDZLGConstant.LOGINFO_TITLE_SUCCESS+"【位置上报】请求信息解密成功,解密数据——>"+jmxx);
				Map map = JsonUtils.getMap4Json(jmxx);
				String sbbh = map.get("sbbh") == null ? "" : map.get("sbbh")+"";
				String jd = map.get("jd") == null ? "" : map.get("jd")+"";
				String wd = map.get("wd") == null ? "" : map.get("wd")+"";
				String dwdm = map.get("dwdm") == null ? "" : map.get("dwdm")+"";
				//1.2、封装数据
				dzlgReqBean = DzlgParseUtil.packHttpWzsb(sbbh, jd, wd, dwdm);
				/**
				 * 请求、向网络服务平台
				 */
				dzlgReqBean = dzlgManager.reqToWlfwpt(dzlgReqBean);
			} catch (Exception e) {
				logger.error(MBDZLGConstant.LOGINFO_TITLE_FAILE+"【位置上报】——>"+MBDZLGConstant.SYSTEMINFO+"处理出错！",e);
				dzlgReqBean.setError(MBDZLGConstant.ERROR_REQ);
			}
		}
		/**
		 * 3、返回信息
		 */
		//3.1、组装信息
		str = (String) DzlgParseHelper.makeReMsg(dzlgReqBean);
		//3.2、返回
		logger.info(MBDZLGConstant.LOGINFO_TITLE_SUCCESS+"【位置上报】——>"+MBDZLGConstant.SYSTEMINFO+"返回数据："+str);
		out.print(str);
	}
	
	public void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		this.doPost(request, response);
	}

}
