/*vip会员专区页*/
.vip-container .list{
	padding: 12px 50px 0;
}
.vip-container .list li:before {
    content: "";
    float: left;
    width: 6px;
    height: 6px;
    margin: 13px 0;
    background-color: #3498db;
    border-radius: 50%;
}
.vip-container .list li a {
    display: block;
    height: 32px;
    font-size: 14px;
    color: #7c7c7c;
    line-height: 32px;
    text-indent: 10px;
}
.ellipsis {
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.vip-container .list li a:hover {
    color: #2980b9;
}
